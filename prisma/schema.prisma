generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Transaction {
  id                Int    @id @default(autoincrement())
  date              String
  description       String
  amount            Float
  category          String
  accountHolderName String @default("Suresh Babu Dhanaraj")
  bankName          String
}
