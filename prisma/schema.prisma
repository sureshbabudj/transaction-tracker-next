generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Transaction {
  id                Int       @id @default(autoincrement())
  date              String
  description       String
  amount            Float
  categoryId        Int?
  category          Category? @relation(fields: [categoryId], references: [id])
  accountHolderName String    @default("Suresh Babu Dhanaraj")
  bankName          String
}

model Category {
  id           Int           @id @default(autoincrement())
  name         String
  value        String        @unique
  patterns     String
  transactions Transaction[]
}
